<div class="row sign-up-form">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Name:<%= @student.name %></span>
        <p>Email: <%= @student.email %></p>
        <p>Current Enrollments:
          <% if @student.cources.empty? %>
             None
          <% else %>
            <% @student.cources.each do |cource| %>
              <ul>
                  <li><%= cource.name %></li>
              </ul>
            <% end %>
          <% end %>
        </p>
      </div>
    </div>
     <% if current_user == @student %>
      <%= link_to '<i class="material-icons right">edit</i>Edit your profile'.html_safe, edit_student_path(@student), class: "waves-effect waves-light btn" %>
     <% end %>
  </div>
</div>
