<div class="row">
  <div class="col s12">
    <h3 class="center-align">Cource Listing</h3>
  </div>
</div>


<div class="row">
    <% @cources.each do |cource| %>
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">

          <div class="card-content white-text">
            <span class="card-title"><%= cource.short_name %>: <%= cource.name %></span>
            <p><%= cource.description %></p>
          </div>

          <div class="card-action">
            <% if logged_in? && !(current_user.cources.include?(cource)) %>
               <%= link_to 'Enroll', cource_enroll_path(cource_id: cource.id), method: :post %>
            <% end %>
            <a href="#">Info</a>
          </div>

        </div>
      </div>
   <% end %>
</div>
